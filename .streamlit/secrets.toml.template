# BOMOCO Secrets Configuration for Streamlit Cloud
# Copy this content to your Streamlit Cloud secrets management
# Go to: App Settings > Secrets

# Anthropic Claude AI (Recommended - for AI-powered insights)
[anthropic]
api_key = "sk-ant-YOUR_ANTHROPIC_API_KEY"

# AWS Credentials (Optional - for real AWS data)
[aws]
access_key_id = "YOUR_AWS_ACCESS_KEY_ID"
secret_access_key = "YOUR_AWS_SECRET_ACCESS_KEY"
region = "us-east-1"

# WattTime API (Optional - for real carbon data)
[watttime]
username = "YOUR_WATTTIME_USERNAME"
password = "YOUR_WATTTIME_PASSWORD"

# Electricity Maps API (Optional - for real carbon data)
[electricity_maps]
api_key = "YOUR_ELECTRICITY_MAPS_API_KEY"

# Google Analytics 4 (Optional - for real business metrics)
[ga4]
property_id = "properties/YOUR_PROPERTY_ID"
# For service account credentials, paste the entire JSON as a string
credentials_json = '''
{
  "type": "service_account",
  "project_id": "your-project",
  "private_key_id": "key-id",
  "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_KEY\n-----END PRIVATE KEY-----\n",
  "client_email": "your-service-account@your-project.iam.gserviceaccount.com",
  "client_id": "123456789",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token"
}
'''

# Custom Business Analytics API (Optional)
[business_api]
base_url = "https://your-analytics-api.com/api/v1"
api_key = "YOUR_API_KEY"

# Application Settings
[app]
demo_mode = true  # Set to false when using real credentials
enable_actuation = false  # Safety: disable real infrastructure changes
